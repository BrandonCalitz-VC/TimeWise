<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskFragment"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple_500"  android:orientation="horizontal"
        >


        <ImageButton
            android:id="@+id/leftButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/purple_500"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Task Details"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageButton
            android:layout_alignParentRight="true"
            android:id="@+id/rightButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/purple_500"
            android:src="@drawable/clock"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:orientation="vertical"
        android:paddingHorizontal="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task Name:"
            android:fontFamily="@font/inter_bold"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etName.Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:textColorHint="@color/white"
            app:hintTextColor="@android:color/transparent"
            app:helperTextTextColor="@android:color/transparent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_google_signin_btn_text_light_normal_background"
                android:backgroundTint="@color/purple_500"
                android:textColor="@color/white"
                android:hint="Enter Task Name"
                android:inputType="text"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start and End Date:"
            android:fontFamily="@font/inter_bold"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etCalendar.Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:textColorHint="@color/white"
            app:hintTextColor="@android:color/transparent"
            app:helperTextTextColor="@android:color/transparent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:endIconDrawable="@drawable/calendar"
            app:endIconMode="custom"
            app:endIconTint="@color/white"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCalendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_google_signin_btn_text_light_normal_background"
                android:backgroundTint="@color/purple_500"
                android:textColor="@color/white"
                android:inputType="none"
                android:enabled="false"
                android:allowClickWhenDisabled="true"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:fontFamily="@font/inter_bold"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etDescription.Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:textColorHint="@color/white"
            app:hintTextColor="@android:color/transparent"
            app:helperTextTextColor="@android:color/transparent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_google_signin_btn_text_light_normal_background"
                android:backgroundTint="@color/purple_500"
                android:textColor="@color/white"
                android:inputType="textMultiLine"
                android:maxLines="4"
                android:lines="4"
                android:gravity="start"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category:" />

            <Spinner
                android:layout_margin="5dp"
                android:id="@+id/categorySpinner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/AddCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"/>

            <Button
                android:id="@+id/NewCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New"/>


        </LinearLayout>

        <TextView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:background="@color/purple_500"
            android:layout_height="wrap_content"
            android:minHeight="40dp"/>

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attachment:" />

            <Button
                android:layout_margin="5dp"
                android:id="@+id/addAttachmentButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="10dp"
                android:text="Add" />
        </LinearLayout>

        <ImageView
            android:id="@+id/AttachmentImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="80dp"/>


        <TextView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progress:" />

        <SeekBar
            android:layout_margin="5dp"
            android:id="@+id/progressSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100" />
    </LinearLayout>

</FrameLayout>